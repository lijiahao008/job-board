<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Welcome to JiahaoLink</h1>
    <p>We believe that if we try hard enough, this world would be a better place for all of us.</p>
    <p><%= link_to "Sign Up To Join JiahaoLink", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>

<div class="row">
  <% @skills.each do |skill| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag skill.avatar.url(:medium), class: 'image'), skill %>
        
      </div>
    </div>
  <% end %>
</div>